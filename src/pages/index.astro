---
import Layout from "../layouts/Layout.astro";
const base = import.meta.env.BASE_URL;
---

<Layout title="CleanBoard - minimalist Keyboard for Android">
    <div class="container hero">
        <div class="app-icon">
            <img
                src={`${base}/cleanboard-logo.png`}
                alt="CleanBoard Logo"
                width="120"
                height="120"
            />
        </div>
        <h1>CleanBoard</h1>
        <p class="tagline">Fast. Private. Simple.</p>
        <p class="description">
            A minimalist Android keyboard designed for a seamless Sinhala and
            English typing experience. Phonetic Singlish support, smart
            suggestions, and no data tracking.
        </p>
        <div class="actions">
            <a href="#" class="button">Get it on Google Play</a>
        </div>
    </div>

    <section class="features">
        <div class="container grid">
            <div class="feature">
                <h3>üöÄ Lightweight</h3>
                <p>
                    Designed for speed with a tiny footprint. No bloat, just
                    performance.
                </p>
            </div>
            <div class="feature">
                <h3>üîí Private</h3>
                <p>
                    No internet permissions. No data collection. Your typing
                    stays on your device.
                </p>
            </div>
            <div class="feature">
                <h3>‚å®Ô∏è Singlish</h3>
                <p>
                    Phonetic Sinhala typing that actually works. Smart
                    suggestions as you type.
                </p>
            </div>
            <div class="feature">
                <h3>üòä Emoji Search</h3>
                <p>
                    Find the perfect emoji instantly with our advanced search
                    functionality.
                </p>
            </div>
        </div>
    </section>
</Layout>

<style>
    .hero {
        padding: 8rem 0 4rem;
        text-align: center;
    }

    .app-icon {
        margin-bottom: 2rem;
        display: flex;
        justify-content: center;
    }

    .app-icon img {
        border-radius: 24%;
        background: var(--muted);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 0.5rem;
        color: var(--foreground);
    }

    .tagline {
        font-size: 1.25rem;
        font-weight: 500;
        color: var(--foreground);
        margin-bottom: 1.5rem;
    }

    .description {
        max-width: 600px;
        margin: 0 auto 2.5rem;
        font-size: 1.125rem;
    }

    .button {
        display: inline-block;
        background-color: var(--foreground);
        color: var(--background);
        padding: 0.875rem 2rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 1rem;
        transition: transform 0.2s;
    }

    .button:hover {
        transform: translateY(-2px);
        opacity: 1;
    }

    .features {
        padding: 4rem 0;
        background: var(--muted);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .feature {
        background: var(--background);
        padding: 2.5rem;
        border-radius: 1.5rem;
        transition: transform 0.2s;
    }

    .feature:hover {
        transform: translateY(-4px);
    }

    .feature h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        color: var(--foreground);
    }

    @media (max-width: 640px) {
        h1 {
            font-size: 2.5rem;
        }

        .hero {
            padding: 4rem 0 2rem;
        }
    }
</style>
